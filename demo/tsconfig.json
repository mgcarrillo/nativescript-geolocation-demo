{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms"
    ],
    "filesGlob": [
        "./d.ts/references.d.ts",
        "./d.ts/ios.d.ts",
        "./d.ts/android17.d.ts",
        "./d.ts/GoogleMaps.d.ts",
        "./**/*.ts"
    ]
}